<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/music_cover"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/iclauncher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/music_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="1"
            android:singleLine="true"
            android:text="Aimer-------————————————————————————————————————-StarRingChild"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/music_prev"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_navigate_before_white_48dp"
                android:tint="#000000" />

            <ImageView
                android:id="@+id/music_state"
                 android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_play_arrow_white_48dp"
                android:tint="#000000" />

            <ImageView
                android:id="@+id/music_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_navigate_next_white_48dp"
                android:tint="#000000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>