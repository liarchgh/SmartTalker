<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_bottombar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff66ccff" >

    <TextView
        android:id="@+id/chat_bottombar_morefun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/chat_bottombar_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Send"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/chat_bottombar_sendingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/chat_bottombar_send"
        android:layout_toRightOf="@id/chat_bottombar_morefun"
        android:background="#ffffff"
        android:hint="Texting here..."
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="15sp" />
</RelativeLayout>