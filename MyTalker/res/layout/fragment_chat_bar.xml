<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_bottombar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff66ccff" >
    <ImageView
        android:id="@+id/chat_bottombar_voice"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/ic_mic_white_48dp"/>
    <ImageView
        android:id="@+id/chat_bottombar_morefun"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/ic_add_white_48dp"
        android:layout_toRightOf="@id/chat_bottombar_voice"/>

    <TextView
        android:id="@+id/chat_bottombar_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="发送"
        android:textColor="#ffffff"
        android:textSize="15sp" />



    <EditText
        android:id="@+id/chat_bottombar_sendingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/chat_bottombar_send"
        android:layout_toRightOf="@id/chat_bottombar_morefun"
        android:background="@drawable/msg_edit_bg"
        android:hint="在这里和我对话..."
        android:inputType="text"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>