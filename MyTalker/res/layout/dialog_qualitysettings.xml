<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/quality_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#66ccff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quality_down"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_navigate_before_white_48dp" />

        <TextView
            android:id="@+id/quality_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="中画质"
            android:textColor="#ffffff"
            android:textSize="15.0dp" />

        <ImageView
            android:id="@+id/quality_up"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_navigate_next_white_48dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quality_topbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quality_topbar"
        android:background="#66ccff"
        android:orientation="horizontal" >
		<Button
            android:id="@+id/quality_autohigh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#66ccff"
            android:gravity="center"
            android:text="自动调整画质（高配版）"
            android:textColor="#000000"
            android:textSize="15.0dp" />
        <Button
            android:id="@+id/quality_autolow"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#66ccff"
            android:gravity="center"
            android:text="自动调整画质（低配版）"
            android:textColor="#000000"
            android:textSize="15.0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quality_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/quality_accept"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#66ccff"
            android:gravity="center"
            android:text="接受"
            android:textColor="#ffffff"
            android:textSize="15.0dp" />

        <Button
            android:id="@+id/quality_decline"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#888888"
            android:gravity="center"
            android:text="放弃"
            android:textColor="#ffffff"
            android:textSize="15.0dp" />
    </LinearLayout>

</RelativeLayout>